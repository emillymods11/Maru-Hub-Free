-- Obtén el PlayerGui del jugador
local playerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Crea un nuevo ScreenGui si no existe
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FullScreenImageGui"
screenGui.Parent = playerGui

-- Crea un nuevo ImageLabel
local imageLabel = Instance.new("ImageLabel")
imageLabel.Name = "FullScreenImageLabel"
imageLabel.Size = UDim2.new(1, 0, 1, 0) -- Tamaño que cubre toda la pantalla (100% ancho y alto)
imageLabel.Position = UDim2.new(0, 0, 0, 0) -- Posición en la esquina superior izquierda
imageLabel.Image = "rbxassetid://130276194326248" -- Reemplaza TU_IMAGEN_ID con el ID de tu imagen
imageLabel.BackgroundTransparency = 1 -- Fondo transparente
imageLabel.Parent = screenGui
